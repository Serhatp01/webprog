@{
    ViewData["Title"] = "Admin Girişi";
}

<h2>Admin Girişi</h2>

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger">@ViewBag.Hata</div>
}

<form asp-action="AdminLogin" method="post">
    <div class="mb-3">
        <label>Email</label>
        <input name="email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Şifre</label>
        <input type="password" name="sifre" class="form-control" />
    </div>

    <button class="btn btn-danger">Admin Girişi</button>
</form>
